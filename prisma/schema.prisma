generator client {
  provider   = "prisma-client-js"
  engineType = "client"
}

datasource db {
  provider = "sqlite"
}

model User {
  id            String    @id @default(cuid())
  name          String
  email         String?   @unique
  password      String?
  emailVerified DateTime?
  image         String?
  companyName   String?
  state         String?
  country       String?
  useCases      String?   // JSON array of selected use cases
  logo          String?   // Base64 encoded logo image
  themeColors   String?   // JSON object with extracted colors { primary, secondary, accent }
  accounts      Account[]
  sessions      Session[]
  interactions  UserInteraction[]
  organizations OrganizationMember[]
  generatedApps GeneratedApp[]
  orgAppMembers OrgAppMember[]
  createdAt     DateTime  @default(now())
}

model Account {
  userId           String  @unique
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
}

model Session {
  sessionToken String   @unique
  userId      String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model App {
  id              String            @id @default(cuid())
  title           String
  description     String
  longDescription String?
  category        String
  icon            String
  author          String
  tags            String
  isPublic        Boolean           @default(true)
  createdAt       DateTime          @default(now())
  interactions    UserInteraction[]
  generatedApp    GeneratedApp?
  orgApps         OrgApp[]
}

enum InteractionType {
  HEART
  STAR
}

model UserInteraction {
  id        String          @id @default(cuid())
  userId   String
  appId     String
  type      InteractionType
  createdAt DateTime        @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  app  App  @relation(fields: [appId],  references: [id], onDelete: Cascade)

  @@unique([userId, appId, type])
}

// ============================================
// App Generation Models
// ============================================

enum GenerationStatus {
  PENDING
  GENERATING
  COMPLETE
  FAILED
}

model GeneratedApp {
  id          String           @id @default(cuid())
  prompt      String
  title       String?
  description String?
  sourceDir   String?
  status      GenerationStatus @default(PENDING)
  error       String?
  createdById String
  createdBy   User             @relation(fields: [createdById], references: [id], onDelete: Cascade)
  appId       String?          @unique
  app         App?             @relation(fields: [appId], references: [id])
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
}

// ============================================
// Organization & Team Models
// ============================================

model Organization {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique // e.g., "zenith" for zenith.go4it.live
  logo        String?  // Base64 for now, will move to object storage later
  themeColors String?  // JSON: { primary, secondary, accent }
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  members     OrganizationMember[]
  invitations Invitation[]
  apps        OrgApp[]
}

enum OrgRole {
  OWNER  // Full control, can delete org, transfer ownership
  ADMIN  // Can manage members, apps, billing
  MEMBER // Can use deployed apps
}

model OrganizationMember {
  id             String       @id @default(cuid())
  organizationId String
  userId         String
  role           OrgRole      @default(MEMBER)
  joinedAt       DateTime     @default(now())

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([organizationId, userId])
}

// ============================================
// Org App Deployment Models
// ============================================

enum DeployStatus {
  ADDED      // Added to org, not yet deployed
  DEPLOYING  // Currently being deployed to Fly.io
  RUNNING    // Live on Fly.io
  STOPPED    // Stopped / scaled to zero
  FAILED     // Deploy failed
}

model OrgApp {
  id             String       @id @default(cuid())
  organizationId String
  appId          String
  status         DeployStatus @default(ADDED)
  flyAppId       String?      // Fly.io app ID once deployed
  flyUrl         String?      // e.g., zenith-space-leadflow.fly.dev
  addedAt        DateTime     @default(now())
  deployedAt     DateTime?

  organization Organization   @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  app          App            @relation(fields: [appId], references: [id], onDelete: Cascade)
  members      OrgAppMember[]

  @@unique([organizationId, appId])
}

model OrgAppMember {
  id       String   @id @default(cuid())
  orgAppId String
  userId   String
  addedAt  DateTime @default(now())

  orgApp OrgApp @relation(fields: [orgAppId], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([orgAppId, userId])
}

enum InvitationStatus {
  PENDING
  ACCEPTED
  EXPIRED
  CANCELLED
}

model Invitation {
  id             String           @id @default(cuid())
  organizationId String
  email          String
  role           OrgRole          @default(MEMBER)
  token          String           @unique @default(cuid())
  status         InvitationStatus @default(PENDING)
  expiresAt      DateTime
  createdAt      DateTime         @default(now())

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@index([email])
  @@index([token])
}
