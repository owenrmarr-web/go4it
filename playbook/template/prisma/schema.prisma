generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// --- Auth models (do not remove) ---

model User {
  id             String           @id @default(cuid())
  email          String           @unique
  password       String
  name           String?
  username       String?
  title          String?
  image          String?          // Profile image from platform (base64)
  profileColor   String?          // Hex color for avatar bg (e.g. "#9333EA")
  profileEmoji   String?          // Emoji avatar (e.g. "ðŸš€")
  role           String           @default("member") // "admin" or "member"
  isAssigned     Boolean          @default(true) // false = org member not on this app's plan
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
  accounts       Account[]
  sessions       Session[]
  accessRequests AccessRequest[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model AccessRequest {
  id            String   @id @default(cuid())
  requestedBy   String
  requestedFor  String   // email of unassigned org member
  status        String   @default("pending") // pending, approved, dismissed
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  user          User     @relation(fields: [requestedBy], references: [id])
}

